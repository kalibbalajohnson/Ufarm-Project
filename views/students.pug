doctype html
head
  link(rel='icon' type='image/png' sizes='16x16' href='../favicon/favicon-16x16.png')
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  link(href='../css/boostrap-5.3/css/bootstrap.css' rel='stylesheet')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css' integrity='sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==' crossorigin='anonymous' referrerpolicy='no-referrer')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css')
  link(rel='stylesheet' href='../css/custom.css')
  title U-Farm
// Nav starts here
div(w3-include-html='../includes/navbar.html')
// Nav ends here
.container-fluid(style='margin-top: 150px')
  .row
    .col-3
      .sidebar
        p
        h5(style='text-align: center; font-family:Trebuchet MS, Times, serif; color:rgb(0, 255, 106);')
          | Urban Farmer
          | Dashboard
        p
        hr
        p
        a(href='/students' style="text-decoration: none; color:white")
          h6(style='text-align: center;')
            | Orders and Bookings 
            i.fa.fa-shop
        p
        hr
        p
        a(href='/upload' style="text-decoration: none; color:white")
          h6(style='text-align: center;')
            | Upload 
            i.fas.fa-arrow-alt-circle-up
        p
        hr
        p
        a(href='/help' style="text-decoration: none; color:white")
          h6(style='text-align: center;')
            | Help Center 
            i.far.fa-comment-dots
        p
        hr
        p
          form(action='logout' method='post')
            button(style='margin-left: 90px;' type='submit') Sign out 
        hr
        p(style='font-size: 10px; text-align: center; margin-top: 80px;')
          span(style='font-size: 15px;') Ufarm
          |             &copy; 2023
    .col-9
      div(style='margin-top: -20px; margin-bottom: 160px;')
        #cards.card(style='width:55rem;  box-shadow: 0px 6px 14px 0px rgba(0, 0, 0, 0.3); text-align: center;  background-color:  rgb(23, 23, 31); border-radius: 14px;')
          .card-body
            h4.card-title(style='color: white;') Welcome 
            h6(style='color: grey;')
              | Explore the dashboard to find out any new current upadates for you
              | on the dashboard
              br
              br
              |
              span(style='color: white') Total Income: UGX #{total.totalFees} 
      h4(style='text-align: center; color: black; ')  Bookings &amp; Orders 
      table.table.table-striped.table-dark(style='margin-bottom: 100px; margin-top: 29px;')
        thead
          tr
            th(scope='col') Name
            th(scope='col') Contact
            th(scope='col') Address
            th(scope='col') Product
            th(scope='col') Price
            th(scope='col') Quantity
            th(scope='col') Ship
            th(scope='col') Payment
            th(scope='col') Action
            th(scope='col') Action
        tbody
        if students.length
            each student in students 
                tr          
                    td #{student.fullname}
                    td #{student.phone}
                    td #{student.address}
                    td #{student.product}
                    td UGX #{student.price}
                    td #{student.quantity}
                    td #{student.ship}
                    td #{student.pay}
                    td 
                      form(action="/students/delete" method='post') 
                        input(type="hidden" name='id' value= student.id)
                        button.btn.btn-danger(type='submit') Delete
                    td 
                      a.btn.btn-dark.btn-block(href='/edit_student/'+student.id) Edit   
                    
        else
            p there are no students in the database
                

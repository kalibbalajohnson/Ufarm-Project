.container(style='margin-top: 120px')
  .row
    .col
    .col-7
      #signupcard.card(style='background-color:  rgba(255, 255, 255, 0);')
        #yo.card-header
          h1(style='text-align: center;') Sign Up
        .card-body
          form#register.row.g-3(name="signup" action="/signup" method='POST')
            fieldset
              .col-md-11
                label.form-label(for='formGroupExampleInput')
                  h6 First Name 
                input#name.form-control(type='text' name='firstname' placeholder='Enter your full Names')
                small#nameErr
                br
              .col-md-11
                label.form-label(for='formGroupExampleInput')
                  h6 Last Name 
                input#name.form-control(type='text' name='Lastname' placeholder='Enter your full Names')
                small#nameErr
                br
              fieldset
                .col-md-11
                  label.form-label(for='inputCity')
                    h6  Unique ID 
                  input#FOid.form-control(type='text' placeholder='eg. FO-123' name='username')
                  small#idErr
            fieldset
              .col-md-11
                label.form-label(for='formGroupExampleInput')
                  h6 Email 
                input#email.form-control(type='email' name='email' placeholder='Enter your email')
                small#emailErr
            fieldset
            .col-md-11
              label.form-label(for='formGroupExampleInput')
                h6 Password 
              input#Password.form-control(name="password" type="password" placeholder='Enter your Password')
              small#passwordErr
            .col-md-8
              label.form-label(for='inlineFormSelectPref')
                h6 Ward 
              select#ward.form-control(name='ward')
                option(value='Default' selected='') Select
                option(value='1')  Ward 1
                option(value='2')  Ward 2
                option(value='3')  Ward 3
                option(value='4')  Ward 4
              small#wardErr
            .col-md-8
              label.form-label(for='inlineFormSelectPref')
                h6 Role 
              select#ward.form-control(name='role')
                option(value='Default' selected='') Select
                option(value='ao')  Agricultural Officer
                option(value='fo')  Farmer One
                option(value='uf')  Urban Farmer
              small#roleErr
            .col-12
            .col-12
              button.btn.btn-success(type='submit' style='margin-left: 200px; width: 120px;') Register
            hr
            h6(style='color: black; margin-left:80px') 
              a(href='/home') Click here
              |  to return to home page
    .col
